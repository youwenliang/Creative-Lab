{{!< default}}
<nav id="nav" class="nav">
	<div class="nav-logo">
		<a href="{{@blog.url}}">
			{{#if @blog.logo}}
			<img src="{{@blog.logo}}" alt="Logo" />
			<span class="name">{{@blog.title}}</span>
			{{else}}
			<span class="name">{{@blog.title}}</span>
			{{/if}}

		</a>
	</div>
	<div class="nav-menu">
		<a class="rss" href="{{@blog.url}}/rss/"><i class="icon-rss"></i></a>
		{{#if @blog.navigation}}
		<!-- <a class="menu" data-action="menu" data-target="menu"><i class="icon-menu"></i></a> -->
		{{/if}}
	</div>
</nav>
{{#post}}
<main class="content" role="main">
	<div class="inner" style="margin-bottom:100px">

	    <article class="{{post_class}}">

			<header class="post-header">
				<h1 class="post-title">{{{title}}}</h1>
			</header>

			<section class="post-content">
				{{content}}
			</section>

	        {{/post}}

	    </article>
    </div>
</main>
